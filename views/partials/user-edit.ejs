<div class="container">
	<div class="row">
		<div class="col">
			<h2>User - Edit</h2>
			<form method="post" action="/user-edit/<%= result.id %>">
				<div class="mb-3">
					<label for="txtFName" class="form-label">First Name</label>
					<input type="text" required="required" class="form-control" value="<%= result.first_name %>" id="txtFName" name="txtFName">
				</div>
				<div class="mb-3">
					<label for="txtLName" class="form-label">Last Name</label>
					<input type="text" required="required" class="form-control" value="<%= result.last_name %>" id="txtLName" name="txtLName">
				</div>
				<button type="submit" class="btn btn-primary">Update</button>
			</form>			
			<br>
			<form method="post" action="/user-delete/<%= result.id %>">
				<div class="alert alert-warning" role="alert">
					<p>
						Delete action can't be undone
					</p>
					<button type="submit" class="btn btn-danger">Delete</button>
				</div>
			</form>			
		</div>
	</div>
</div>