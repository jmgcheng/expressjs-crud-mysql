<div class="container">
	<div class="row">
		<div class="col">
			<h2>List Users</h2>
			<br>
			<% if(users.length > 0) { %>
			<table class="table">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">First</th>
						<th scope="col">Last</th>
						<th scope="col">Actions</th>
					</tr>
				</thead>
				<tbody>
					<% users.forEach(function(user) { %>
					<tr>
						<th scope="row"><%= user.id %></th>
						<td><%= user.first_name %></td>
						<td><%= user.last_name %></td>
						<td>
						<a href="/user-edit/<%= user.id %>" type="button" class="btn btn-primary btn-sm">Edit</a>
						</td>
					</tr>
					<% }); %>
				</tbody>
			<% } else { %>  
				<p>
					Record Empty
				</p>
			<% } %>
			</table>
		</div>
	</div>
</div>